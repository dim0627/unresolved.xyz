{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@libs": [
        "./libs/index.ts"
      ],
      "@components": [
        "./components/index.ts"
      ],
      "@layouts": [
        "./layouts/index.ts"
      ],
      "@styles/*": [
        "./styles/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
